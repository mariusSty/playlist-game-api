generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @default(uuid())
  name   String?
  room   Room?   @relation(fields: [roomId], references: [id])
  roomId Int?
  isHost Boolean @default(false)
}

model Room {
  id    Int    @id @default(autoincrement())
  pin   String @unique
  users User[]
}
